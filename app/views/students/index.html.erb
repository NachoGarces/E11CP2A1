<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table class='table table-hover'>
  <thead>
    <tr>
      <th scope='col'>Name</th>
      <th scope='col'>Age</th>
      <th scope='col'></th>
      <th scope='col'></th>
      <th scope='col'></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr class='table table-light' scope="row">
        <td><%= student.name %></td>
        <td><%= student.age %></td>
        <td><%= link_to 'Show', student, class:"btn btn-success p-1" %></td>
        <td><%= link_to 'Edit', edit_student_path(student), class:"btn btn-info p-1" %></td>
        <td><%= link_to 'Destroy', student, class:"btn btn-danger p-1", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_student_path, class:"btn btn-primary btn-lg" %>
